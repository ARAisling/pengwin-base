#!/bin/sh
# postrm script for wlinux-base
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        rm /etc/fonts/local.conf
        if [ -f "/etc/fonts/local.conf.old" ] ; then
            echo "Restoring backup /etc/fonts/local.conf"
            mv /etc/fonts/local.conf.old /etc/fonts/local.conf
        fi

        rm /etc/profile
        if [ -f "/etc/profile.old" ] ; then
            echo "Restoring backup /etc/profile"
            mv /etc/profile.old /etc/profile
        fi

        rm /etc/os-release
        if [ -f "/etc/os-release.old" ] ; then
            echo "Restoring backup /etc/os-release"
            mv /etc/os-release.old /etc/os-release
        fi

        rm /etc/environment
        if [ -f "/etc/environment.old" ] ; then
            echo "Restoring backup /etc/environment"
            mv /etc/environment.old /etc/environment
        fi

        rm /etc/bashrc
        if [ -f "/etc/bashrc.old" ] ; then
            echo "Restoring backup /etc/bashrc"
            mv /etc/bashrc.old /etc/bashrc
        fi

        rm /etc/apt/preferences
        if [ -f "/etc/apt/preferences.old" ] ; then
            echo "Restoring backup /etc/apt/preferences"
            mv /etc/apt/preferences.old /etc/apt/preferences
        fi

        rm /etc/apt/sources.list
        if [ -f "/etc/apt/sources.list.old" ] ; then
            echo "Restoring backup /etc/apt/sources.list"
            mv /etc/apt/sources.list.old /etc/apt/sources.list
        fi

        rm /etc/dpkg/origins/default
        if [ -f "/etc/dpkg/origins/default.old" ] ; then
            echo "Restoring backup /etc/dpkg/origins/default"
            mv /etc/dpkg/origins/default.old /etc/dpkg/origins/default
        fi

        rm /etc/sudoers
        if [ -f "/etc/sudoers.old" ] ; then
            echo "Restoring backup /etc/sudoers"
            mv /etc/sudoers.old /etc/sudoers
        fi

        if [ -f "/etc/sudoers.lecture.old" ] ; then
            echo "Restoring backup /etc/sudoers.lecture"
            mv /etc/sudoers.lecture.old /etc/sudoers.lecture
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
