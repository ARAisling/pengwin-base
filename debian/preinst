#!/bin/sh
# preinst script for wlinux-base
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install)
	# Ensure all necessary filesystem directories exist
	mkdir -p /etcfonts
	mkdir -p /etc/profile.d
	mkdir -p /etc/apt/sources.list.d
	mkdir -p /etc/dpkg/origins
	
        # Backup all old files since we over-write a lot of other package's files
	backup_dir="/etc/pre-wlinux"
	mkdir -p ${backup_dir}

        if [ -f "/etc/fonts/local.conf" ] ; then
            echo "Backing up /etc/fonts/local.conf"
            mv /etc/fonts/local.conf ${backup_dir}
        fi


        if [ -f "/etc/os-release" ] ; then
            echo "Backing up /etc/os-release"
            mv /etc/os-release ${backup_dir}
        fi

        if [ -f "/etc/environment" ] ; then
            echo "Backing up /etc/environment"
            mv /etc/environment ${backup_dir}
        fi

        if [ -f "/etc/bashrc" ] ; then
            echo "Backing up /etc/bashrc"
            mv /etc/bashrc ${backup_dir}
        fi

        if [ -f "/etc/apt/preferences" ] ; then
            echo "Backing up /etc/apt/preferences"
            mv /etc/apt/preferences ${backup_dir}
        fi

        if [ -f "/etc/apt/sources.list" ] ; then
            echo "Backing up /etc/apt/sources.list"
            mv /etc/apt/sources.list ${backup_dir}
        fi

	if [ -d "/etc/apt/trusted.gpg" ] ; then
	    echo "Backing up /etc/apt/trusted.gpg"
	    cp /etc/apt/trusted.gpg ${backup_dir}
	fi

	if [ -d "/etc/apt/trusted.gpg.d" ] ; then
	    echo "Backing up /etc/apt/trusted.gpg.d/"
	    cp -r /etc/apt/trusted.gpg.d ${backup_dir}
	fi

        if [ -f "/etc/dpkg/origins/default" ] ; then
            echo "Backing up /etc/dpkg/origins/default"
            mv /etc/dpkg/origins/default ${backup_dir}
        fi

        if [ -f "/etc/sudoers" ] ; then
            echo "Backing up /etc/sudoers"
            cp /etc/sudoers ${backup_dir}
        fi

        if [ -f "/etc/sudoers.lecture" ] ; then
            echo "Backing up /etc/sudoers.lecture"
            cp /etc/sudoers.lecture ${backup_dir}
        fi
    ;;

    upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
