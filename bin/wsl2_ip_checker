#!/bin/bash

source /etc/environment

passed_new_ip_address="$1"; shift

env_wsl2_ip_address="$(grep -e ^DISPLAY=.* /etc/environment | sed -e 's/DISPLAY=\(.*\):0\.0$/\1/g')"

  if [ ! "$passed_new_ip_address" -eq "$env_wsl2_ip_address" ]; then
    sed -i 's/^DISPLAY=.*$/DISPLAY='$passed_new_ip_address':0\.0/g' /etc/environment
    echo "Detected: IP Changed. Restart Pengwin to make changes take effect."
  fi


# cleanup
unset wsl2_type
unset wsl2_readable_type
unset wsl_display_cont